            <TextBlock Text="Are you sure you want to delete" FontWeight="Medium" Height="30" Width="190" Margin="70,53,40,67"></TextBlock>
            <Button Click="Button_Click_1" Width="60" Height="30" Background="#FFE54242" VerticalAlignment="Bottom" Content="Yes" BorderBrush="Black" Margin="122,0,114,29"/>
