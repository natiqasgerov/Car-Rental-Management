<Window x:Class="CarRentalSystem.SuccessWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:local="clr-namespace:CarRentalSystem"
        mc:Ignorable="d"
        Height="150" Width="300" AllowsTransparency="True" Background="Transparent" WindowStartupLocation="CenterScreen"
        WindowStyle="None">
    <Border Background="White" BorderBrush="Black" BorderThickness="2">
        <Grid>
            <materialDesign:PackIcon Kind="InformationOutline" Height="40" Width="40" Margin="23,27,0,0" Foreground="#FF4747F1"/>
            <TextBlock Text="CRMS" FontSize="16" FontWeight="Bold" Height="30" Width="50" Margin="70,25,178,93"></TextBlock>
            <TextBlock Text="Saved Successfully..." FontWeight="Medium" Height="30" Width="190" Margin="70,53,40,67"></TextBlock>
            <Button Width="60" Height="30" Background="#FF4747F1" VerticalAlignment="Bottom" Content="OK" BorderBrush="Black" Margin="205,0,31,24" Click="Button_Click"/>
        </Grid>
    </Border>
</Window>
